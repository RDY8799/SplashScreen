<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle"
                    android:useLevel="true">
                    <corners android:radius="15dp" />
                    <stroke
                        android:width="1px"
                        android:color="#848484" />
                    <gradient
                        android:centerColor="#40FFFFFF"
                        android:centerX="0.5"
                        android:centerY="0.5"
                        android:endColor="#26FFFFFF"
                        android:gradientRadius="150dp"
                        android:startColor="#4DA4A4A4"
                        android:type="radial" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#80000000" />
                    <corners android:radius="15dp" />
                    <padding
                        android:bottom="5px"
                        android:left="5px"
                        android:right="5px"
                        android:top="5px" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>