<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="8px">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle"
                    android:useLevel="true">
                    <corners android:radius="1dp" />
                    <gradient
                        android:centerColor="#CCFFFFFF"
                        android:centerX="0.5"
                        android:centerY="0.5"
                        android:endColor="#A6FFFFFF"
                        android:gradientRadius="150dp"
                        android:startColor="#B3A4A4A4"
                        android:type="radial" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#0DFFFFFF" />
                    <corners android:radius="4dp" />
                    <padding
                        android:bottom="2px"
                        android:left="2px"
                        android:right="2px"
                        android:top="2px" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>